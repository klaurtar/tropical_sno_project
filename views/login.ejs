<% include ../partials/header %>
    <section class="login">
        <div class="container">
            <div class="row">
                <div class="col-6 offset-3 ">
                    <form class="text-center login-screen" action="/login" method="POST">
                        <h2>Log In</h2>
                        <div class="form-group">
                            <label for="username"><b>Username</b></label>
                            <input type="text" placeholder="Enter Username" name="username" class="form-control" required>
                        </div>
                    
                        <div class="form-group">
                            <label for="password"><b>Password</b></label>
                            <input type="password" placeholder="Enter Password" name="password" class="form-control" required>
                        </div>
                        <button type="submit" class="d-block btn btn-primary">Log In</button>
                    </form>
                </div>
            </div>
        </div>
    </section>



</body>
</html>