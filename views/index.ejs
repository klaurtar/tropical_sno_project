        <div class="customRow">
            <div id="leftButton" class="">
                    <button id="flavorButtonLeft"><i class="fas fa-chevron-circle-left"></i></button>
            </div>
            <div id="rightButton" class="">
                <button id="flavorButtonRight"><i class="fas fa-chevron-circle-right"></i></button>
            </div>
        </div>
            
    </section>

    <section id="floatingCards" class="d-flex">
        <div class="container">
            <h2 class="text-center">Sizes</h2>
            <div class="customRow text-center">
                <div class="col-1-of-3" id="cardOne">
                    <p class="u-bottom-margin-small">Small</p>
                    <div class="floatingCard">
                        <div id="floatingOne" class="card-side card-side-front" onclick="">
                            
                        </div>
                        <div id="floatingOneBack" class="card-side card-side-back d-flex justify-content-center" onclick="">
                            <div class="align-self-center price">$3.00</div>
                        </div>
                    </div>
                </div>
                <div class="col-1-of-3" id="cardTwo">
                    <p class="u-bottom-margin-medium">Medium</p>
                    <div class="floatingCard">
                        <div id="floatingTwo" class="card-side card-side-front" onclick="">
                            
                        </div>
                        <div id="floatingTwoBack" class="card-side card-side-back d-flex justify-content-center" onclick="">
                            <div class="align-self-center price">$3.50</div>
                        </div>
                    </div>
                </div>
                <div class="col-1-of-3" id="cardThree">
                    <p class="u-bottom-margin-large">Large</p>
                    <div class="floatingCard">
                        <div id="floatingThree" class="card-side card-side-front" onclick="">
                            
                        </div>
                        <div id="floatingThreeBack" class="card-side card-side-back d-flex justify-content-center" onclick="">
                            <div class="align-self-center price">$4.00</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="socialMedia" class="section-connect">
        <div class="bg-video">
            <video class="bg-video__content" autoplay muted loop>
                <source src="/images/tropical_sno_background_cropped.mp4" type="video/mp4">
                    Your browser is not supported!
            </video>
        </div>
        <div class="u-center-text"><span>Connect with Us</span></div>
        <div class="u-center-text"> <a href="https://www.facebook.com/RM-Tropical-Sno-Manchester-98654078191/"><i class="fab fa-facebook"></i></a></div>
    </section>

   

