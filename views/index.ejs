<main>
    <section class="section-about" id="locations">
        <div class="u-center-text u-margin-bottom-big">
            <h2 class="heading-secondary">
                Locations in St. Louis
            </h2>
        </div>
        
        <div class="customRow">
            <div class="col-1-of-2" id="locationText">
                <div id="starterText">
                    <h3 class="heading-tertiary u-center-text u-margin-bottom-small">
                            We've got one near you!
                    </h3>
                    <p class="paragraph">
                        With 3 locations evenly spread across St. Louis, we're guaranteed to be near you so you can satisfy your shaved ice needs whenever the craving hits!
                    </p>
                </div> 
            </div>
            <div class="col-1-of-2">
                <div class="composition">
                    <div class="overlay overlay--p1"></div>
                    <div class="overlay overlay--p2"></div>
                    <div class="overlay overlay--p3"></div>
                    <img src="/images/manchester.jpg" alt="Manchester" class="composition__photo composition__photo--p1">
                    <img src="https://s3-media2.fl.yelpcdn.com/bphoto/-Kbg7_IUl_byBPYquSrqUw/o.jpg" alt="City" class="composition__photo composition__photo--p2">
                    <img src="/images/wildwood.jpg" alt="placeholder" class="composition__photo composition__photo--p3">
                </div>
            </div>
        </div>
    </section>

    <section id="flavors" class="section-flavors">
        <div class="customRow">
            <div id="flavorHeader">
                <h3 class="text-center">Flavors</h3>
                <h4 >(<span id="flavorInstruction">hover over</span> a flavor)</h4>
            </div>
            <div id="flavor-box-1" class="col-1-of-4 feature-box mobileLook">
                <div id="flavorList1">

                </div>
            </div>
            <div id="flavor-box-2" class="col-1-of-4 feature-box mobileLook">
                <div id="flavorList2">

                </div>
            </div>
            <div id="flavor-box-3" class="col-1-of-4 feature-box mobileLook">
                <div id="flavorList3">

                </div>
            </div>
            <div id="flavor-box-4" class="col-1-of-4 feature-box mobileLook">
                <div id="flavorList4">
                    
                </div>
            </div>
            <!-- <div id="comboDisplay">

            </div> -->
        </div>
